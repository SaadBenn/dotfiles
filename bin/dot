#!/bin/sh
#
# dot
#
# Updates dotfiles by pulling from the github.

export ZSH=$HOME/.dotfiles

# Pull changes
( cd $ZSH; git pull; )

if [ "$PLATFORM" = "darwin" ]; then
else
    dconf load /org/gnome/terminal/legacy/profiles:/:b1dcc9dd-5262-4d8d-a863-c897e6d979b9/ < $DOTFILES_ROOT/gnome/profile.dconf
fi

# if first time installing, will not update npm

if [ ! -f $ZSH/installed ]; then
    echo "Updating npm"
    # Update npm
    npm update -g npm

    # Update global npm packages
    npm upgrade -g
else
    echo "First time installing, will not update"
fi
