#!/bin/sh
#
# dot
#
# Updates dotfiles by pulling from the github.

export ZSH=$HOME/.dotfiles

# Pull changes
( cd $ZSH; git pull; )

if [[ $(uname) == 'Darwin' ]]
then

  # Setup OSX defaults
  $ZSH/osx/set-defaults.sh

  # Upgrade brew
  brew update

  # Install brew packages
  $ZSH/brew/install.sh 2>&1

  # Install iTerm2 color profile
  open $ZSH/iTerm/black-screen.itermcolors

fi

# Update npm
npm update -g npm

# Update global npm packages
npm update -g
